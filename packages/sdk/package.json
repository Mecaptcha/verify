{
  "name": "@mecaptcha/verify-sdk",
  "version": "0.1.0",
  "description": "Headless TypeScript SDK for MeCaptcha SMS verification",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mecaptcha",
    "2fa",
    "mfa",
    "sms",
    "verification",
    "otp",
    "authentication"
  ],
  "author": "MeCaptcha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mecaptcha/verify",
    "directory": "packages/sdk"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}



